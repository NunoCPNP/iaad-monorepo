{
  "$schema": "./node_modules/@garment/workspace/schemas/config.schema.json",
  "presets": {},
  "projects": {
    "app": {
      "path": "apps/sample",
      "tasks": {
        "dev": {
          "runner": "next",
          "options": {
            "appPath": "{{projectDir}}"
          }
        }
      }
    },
    "api": {
      "path": "apis/sample",
      "tasks": {
        "dev": {
          "runner": "bin",
          "options": {
            "bin": "yarn",
            "args": "run dev",
            "stream": true,
            "longRunning": true
          }
        }
      }
    }
  },
  "schematics": []
}